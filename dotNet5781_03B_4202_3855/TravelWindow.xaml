<Window x:Class="dotNet5781_03B_4202_3855.TravelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_4202_3855"
        mc:Ignorable="d"
        Title="TravelWindow" Height="70" Width="300">
    <Grid Background="Blue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Enter the distance:" FontWeight="Bold" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16"/>
        <TextBox x:Name="tbKms" Margin="5" FontSize="14" FontWeight="Bold" HorizontalContentAlignment="Center" Foreground="Orange" Grid.Column="1" Background="{x:Null}" PreviewTextInput="tbKms_PreviewTextInput" KeyDown="tbKms_KeyDown"/>
    </Grid>
</Window>
